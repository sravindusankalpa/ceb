        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "cpx": "^1.5.0",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "tailwindcss": "^3.1.0",
        "vite": "^5.0"
    }
}
